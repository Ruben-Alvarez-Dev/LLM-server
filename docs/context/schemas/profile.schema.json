{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "profile.schema.json",
  "type": "object",
  "required": [
    "profile_name",
    "selected_models",
    "ports",
    "processes",
    "concurrency",
    "ram_budget_gb",
    "memory_server_ram_gb",
    "notes"
  ],
  "additionalProperties": false,
  "properties": {
    "profile_name": { "type": "string", "minLength": 1 },
    "selected_models": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "ports": {
      "type": "object",
      "required": ["orchestrator", "llm_server", "memory_server"],
      "additionalProperties": false,
      "properties": {
        "orchestrator": { "type": "integer", "minimum": 1 },
        "llm_server": { "type": "integer", "minimum": 1 },
        "memory_server": { "type": "integer", "minimum": 1 }
      }
    },
    "processes": {
      "type": "object",
      "required": ["orchestrator", "llm_server", "memory_server"],
      "additionalProperties": false,
      "properties": {
        "orchestrator": { "type": "string", "minLength": 1 },
        "llm_server": { "type": "string", "minLength": 1 },
        "memory_server": { "type": "string", "minLength": 1 }
      }
    },
    "concurrency": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "integer", "minimum": 0 }
    },
    "ram_budget_gb": { "type": "number", "minimum": 1 },
    "memory_server_ram_gb": { "type": "number", "minimum": 0 },
    "notes": { "type": "string" }
  }
}
